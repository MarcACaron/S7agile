<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="30.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PaletteCouleurController">
   <children>
      <Button fx:id="fillAnanas" mnemonicParsing="false" onAction="#ananas" prefHeight="30.0" prefWidth="40.0" />
      <Button fx:id="fillDirt" mnemonicParsing="false" onAction="#dirt" prefHeight="30.0" prefWidth="40.0" />
      <Button fx:id="fillRed" mnemonicParsing="false" onAction="#red" prefHeight="30.0" prefWidth="40.0" />
      <Label prefHeight="30.0" text="Line color:">
         <font>
            <Font size="15.0" />
         </font>
         <HBox.margin>
            <Insets left="15.0" right="5.0" />
         </HBox.margin>
      </Label>
      <ColorPicker fx:id="stroke" onAction="#changeStrokeColor" prefHeight="30.0" prefWidth="100.0" promptText="Stroke" />
      <Label prefHeight="30.0" prefWidth="25.0" text="px:" textAlignment="CENTER">
         <HBox.margin>
            <Insets left="15.0" right="5.0" />
         </HBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="lineWidth" prefHeight="30.0" prefWidth="40.0" />
      <Button mnemonicParsing="false" onAction="#zoomIn" prefHeight="30.0" prefWidth="40.0">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            	<image>
            		<Image url="@../images/ZoomIn.png" />
            	</image>
            </ImageView>         
         </graphic>
      </Button>
      <Button mnemonicParsing="false" onAction="#zoomOut" prefHeight="30.0" prefWidth="40.0">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
            	<image>
            		<Image url="@../images/ZoomOut.png" />
            	</image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</HBox>
