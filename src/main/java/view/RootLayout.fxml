<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="MenuBarFile" mnemonicParsing="false" text="File">
          
            <items>
              <MenuItem fx:id="menuItemNew" mnemonicParsing="false" text="New" />
              <MenuItem fx:id="menuItemOpen" mnemonicParsing="false" text="Open" />
              <MenuItem mnemonicParsing="false" text="Open as" />
              <MenuItem fx:id="menuItemSave" mnemonicParsing="false" text="Save" />
              <MenuItem fx:id="menuItemSaveAs" mnemonicParsing="false" text="Save as" />
              <MenuItem mnemonicParsing="false" text="Quit" />              
			</items>

          </Menu>
          
          <Menu fx:id="MenuBarEdit" mnemonicParsing="false" text="Edit">
          
            <items>
              <MenuItem mnemonicParsing="false" text="Undo ctl z" />
              <MenuItem mnemonicParsing="false" text="Cut" />
              <MenuItem mnemonicParsing="false" text="Copy" />
              <MenuItem mnemonicParsing="false" text="Paste" />
              <MenuItem mnemonicParsing="false" onAction="#clear" text="Clear" />
              <MenuItem mnemonicParsing="false" text="Duplicate" />              
              <MenuItem mnemonicParsing="false" text="Select All ctl" />
                            
			</items>
            
          </Menu>
          <Menu fx:id="MenuBarLayout" mnemonicParsing="false" text="Layout">
            <items>
              <MenuItem mnemonicParsing="false" text="Turn Autogrid off" />
              <MenuItem mnemonicParsing="false" text="Show rules" />
              <MenuItem mnemonicParsing="false" text="Show gridlines" />
              <MenuItem mnemonicParsing="false" text="Show size" />
              <MenuItem mnemonicParsing="false" text="Single space" />
              <MenuItem mnemonicParsing="false" text="Double space" />
              <MenuItem mnemonicParsing="false" text="Line spacing aa" />              
			</items>
          </Menu>
          
          <Menu fx:id="MenuBarPen" mnemonicParsing="false" text="Pen">
             <items>              
              <MenuItem mnemonicParsing="false" text="Plain line" />
              <MenuItem mnemonicParsing="false" text="Dashed line" />
              <MenuItem mnemonicParsing="false" text="Autosize line" />
              <MenuItem mnemonicParsing="false" text="Arrow at start" />
              <MenuItem mnemonicParsing="false" text="Arrow at end" />         
			</items>
          </Menu>   
          
          <Menu fx:id="MenuBarFont" mnemonicParsing="false" text="Font">
            <items>
              <MenuItem mnemonicParsing="false" text="Times" />
              <MenuItem mnemonicParsing="false" text="Helvetica" />
              <MenuItem mnemonicParsing="false" text="Fonts" />
              <MenuItem mnemonicParsing="false" text="Font sizes" />
			</items>
          </Menu>   
                                                                
        </menus>
      </MenuBar>
   </top>
</BorderPane>
